{
    "extends": "../tsconfig.spec.json",
    "compilerOptions": {
        "outDir": "../out-tsc/spec",
        "baseUrl": "./",
        "module": "commonjs",
        "target": "es5",
        "types": [
            "jasmine",
            "node"
        ],
        "paths": {
            "@romainmarecat/*": [
                "./../../projects/*"
            ],
            "@romainmarecat/ngx-calendar": [
                "./../../projects/ngx-calendar"
            ]
        }
    },
    "files": [
        "test.ts",
        "polyfills.ts"
    ],
    "include": [
        "**/*.spec.ts",
        "**/*.d.ts",
        "../**/*.spec.ts",
        "../shared/*.spec.ts",
        "../shared/**/*.spec.ts"
    ]
}
