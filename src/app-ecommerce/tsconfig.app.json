{
  "extends": "../tsconfig.app.json",
  "compilerOptions": {
    "paths": {
      "dragula": [
        "../../node_modules/dragula/dist/dragula.min.js"
      ],
      "shared/*": [
        "../shared/*"
      ]
    },
    "outDir": "../../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": []
  },
  "include": [
    "main.ts",
    "polyfills.ts",
    "../shared/*",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "../shared/*.spec.ts",
    "../shared/**/*.spec.ts"
  ]
}
