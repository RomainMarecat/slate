{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "baseUrl": "./",
        "module": "commonjs",
        "types": [
            "node"
        ]
    },
    "angularCompilerOptions": {
        "entryModule": "app.server.module#AppServerModule"
    },
    "include": [
        "main.server.ts",
        "polyfills.ts",
        "home/home.module.ts",
        "recipe/recipe.module.ts",
        "recipe-list/recipe-list.module.ts",
        "recipe-detail/recipe-detail.module.ts",
        "../shared/admin/app-recipe/recipe/*.ts",
        "../shared/admin/app-recipe/*.ts",
        "../shared/admin/base/*/*.ts",
        "../shared/admin/base/*.ts"
    ],
    "exclude": [
        "test.ts",
        "**/*.spec.ts",
        "../shared/*.spec.ts",
        "../shared/**/*.spec.ts"
    ]
}
