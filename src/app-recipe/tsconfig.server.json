{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "commonjs",
    "types": []
  },
  "angularCompilerOptions": {
    "entryModule": "app.server.module#AppServerModule"
  },
  "include": [
    "main.server.ts",
    "polyfills.ts",
    "home/home.module.ts",
    "recipe/recipe.module.ts",
    "recipe-list/recipe-list.module.ts",
    "recipe-detail/recipe-detail.module.ts",
    "../shared/*",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "../shared/*.spec.ts",
    "../shared/**/*.spec.ts"
  ]
}
